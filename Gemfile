# working Gemfile for all of these APIs
# put in a file called "Gemfile"
# use bundler gem to package
# $ bundle install

source 'https://rubygems.org'
ruby "2.0.0" 

# REST API helper gem
gem 'hashie', '~> 2.1.2' 

# Foursquare gem
gem 'foursquare2' 

# used to call SF data REST API
gem 'soda-ruby', require: 'soda' 

# raw HTTP request gem
gem 'httparty' 

# debugging
gem 'pry'
gem 'pry-nav' 
